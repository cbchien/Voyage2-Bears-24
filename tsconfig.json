// Automatically generated by "tsc --init"
// Configured for transpiling JS code from ES6 to ES5
{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "./build/",
    "rootDir": "./src/",
    "removeComments": true, 
    "downlevelIteration": true,
    "allowUnreachableCode": false,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "allowUnusedLabels": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],

    /* Additional Checks */
    "noStrictGenericChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "typings/*"]
    },
    "allowSyntheticDefaultImports": true,
    "listFiles": false,
    "pretty": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".cache-loader"
  ]
}
